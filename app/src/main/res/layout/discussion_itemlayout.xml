<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:maxHeight="300dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="30dp"
            android:background="#A7EFA9"
            android:text="Discussion"
            android:padding="5dp"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/discussionUploaderImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/CircularImageStyle"
                android:src="@drawable/profiledummy"
                android:padding="5dp">
            </com.google.android.material.imageview.ShapeableImageView>


            <TextView
                android:id="@+id/discussionUploaderName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GOURAV AGARWAL"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                android:layout_margin="2dp"
                android:textSize="16sp"
                android:padding="2dp"></TextView>

            <TextView
                android:id="@+id/timeofDiscussionPost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" -2 days ago"
                android:textSize="11sp"
                android:layout_gravity="center_vertical"></TextView>



        </LinearLayout>

        <LinearLayout
            android:id="@+id/detailedview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/DiscussionCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_margin="5dp">
            </TextView>
            <TextView
                android:id="@+id/DiscussionDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="85dp"
                android:text="The team debated the pros and cons of using Firebase versus
                 AWS for the backend, considering cost, scalability, and ease of integration.
A lively discussion ensued about whether AI-generated art should be considered
 original or derivative, with strong arguments on both sides.
In the meeting, the group agreed on implementing a dark mode for the
 app but couldn't settle on the default color palette for accessibility."
                android:justificationMode="inter_word"
                android:maxLines="5"
                android:ellipsize="end"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="10dp"></TextView>

            <ImageView
                android:id="@+id/DiscussionImage"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="5dp"
                android:src="@drawable/loadingimage"
                android:background="@color/white">
            </ImageView>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">
            <ImageView
                    android:id="@+id/DiscussionLikeButton"
                    android:layout_width="20dp"
                    android:layout_margin="5dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/thumb_up_24">
            </ImageView>
            <ImageView
                    android:id="@+id/DiscussionCommentButton"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="5dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/chat_bubble_outline_24">
            </ImageView>
        </LinearLayout>

        <TextView
            android:id="@+id/noofLikes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:text="150 likes"
            android:layout_marginStart="20dp"></TextView>

    </LinearLayout>
</androidx.cardview.widget.CardView>