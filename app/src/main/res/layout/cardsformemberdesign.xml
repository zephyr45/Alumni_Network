<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="10dp"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="8dp"
    android:layout_gravity="center"
    app:cardBackgroundColor="@color/lightgrey">

    <LinearLayout
        android:id="@+id/memberLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/memberImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:elevation="15dp"
            android:padding="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/profiledummy"
            android:layout_margin="15dp"
            app:strokeColor="@color/white"
            android:layout_centerHorizontal="true"
            app:shapeAppearanceOverlay="@style/CircularImageStyle"></com.google.android.material.imageview.ShapeableImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/nameofMember"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gourav Agarwal"
                android:textStyle="bold|normal"
                ></TextView>
            <TextView
                android:id="@+id/graduationYearOfMember"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2026"
                android:textStyle="normal"></TextView>



        </LinearLayout>

    </LinearLayout>








</androidx.cardview.widget.CardView>