<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp"
    app:cardCornerRadius="5dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/postTypeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="30dp"
            android:background="#A7EFA9"
            android:padding="5dp"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/userimageforInternship"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/profiledummy"
            android:layout_margin="5dp"
            android:scaleType="centerCrop"
            android:padding="5dp"
            app:shapeAppearanceOverlay="@style/CircularImageStyle">
        </com.google.android.material.imageview.ShapeableImageView>

        <TextView
            android:id="@+id/userNameForInternship"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="GOURAV AGARWAL"
            android:layout_gravity="center_vertical"
            android:padding="5dp"
            android:textStyle="bold"></TextView>
        <TextView
            android:id="@+id/timeStampForInternship"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:text="-12 days ago"
            android:layout_gravity="center_vertical"
            android:padding="5dp"></TextView>
    </LinearLayout>

        <LinearLayout
            android:id="@+id/InternshipDetailedView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="8dp">
            <TextView
                android:id="@+id/InternshipCompany"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:padding="3dp"
                android:text="Company Name:Google"></TextView>
            <TextView
                android:id="@+id/InternshipRole"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:padding="3dp"
                android:text="Role -Software Developer Intern"></TextView>

            <TextView
                android:id="@+id/InternhipStipend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:padding="3dp"
                android:text="Expected Stipend-30000"
                ></TextView>
            <TextView
                android:id="@+id/InternshipDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:textStyle="bold"
                android:padding="3dp"
                android:text="Duration-2 months"
                ></TextView>
            <TextView
                android:id="@+id/InternshipLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:textStyle="bold"
                android:padding="3dp"
                android:text="Location-Benagluru"
                ></TextView>
            <TextView
                android:id="@+id/InternshipApplyLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:textStyle="bold"
                android:padding="3dp"
                ></TextView>
            <TextView
                android:id="@+id/InternshipDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:justificationMode="inter_word"
                android:padding="3dp"
                android:maxLines="5"
                android:ellipsize="end"
                android:text="Description-We are looking for a passionate Software Development Intern to join our tech team. This role provides hands-on experience in developing real-world applications, collaborating with a talented team, and building innovative solutions."
                ></TextView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/InternshipLikeButton"
                android:layout_width="20dp"
                android:layout_margin="5dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/thumb_up_24">
            </ImageView>
            <ImageView
                android:id="@+id/InternshipCommentButton"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/chat_bubble_outline_24">
            </ImageView>
        </LinearLayout>

        <TextView
            android:id="@+id/InternshipLikes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:layout_marginBottom="5dp"
            android:text="150 likes"
            android:layout_marginStart="15dp"></TextView>




    </LinearLayout>




</androidx.cardview.widget.CardView>