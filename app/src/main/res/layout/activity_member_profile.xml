<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MemberProfile">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarMemberProfile"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/lavender"
        android:gravity="center"
        app:titleTextColor="@color/white">
        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:gravity="center" />
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_below="@id/toolbarMemberProfile"
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/lavender"></View>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/memberProfileImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/profiledummy"
                android:layout_marginTop="90dp"
                android:layout_centerHorizontal="true"
                android:elevation="15dp"
                android:padding="5dp"
                android:scaleType="centerCrop"
                app:strokeColor="@color/white"
                app:shapeAppearanceOverlay="@style/CircularImageStyle">
            </com.google.android.material.imageview.ShapeableImageView>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="220dp">
                <TextView
                    android:id="@+id/MemberName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:gravity="center"
                    android:text="GOURAV AGARWAL"
                    android:textStyle="bold"
                    android:textSize="18sp"></TextView>



                <TextView
                    android:id="@+id/memberWork"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textSize="16sp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:gravity="center"
                    android:text="App Developer At TCS"></TextView>

                <TextView
                    android:id="@+id/MemberCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:text="Bengaluru,India"
                    android:gravity="center"></TextView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/chatwithmemberbutton"
                        android:layout_width="130dp"
                        android:visibility="gone"
                        android:layout_height="40dp"
                        android:backgroundTint="@color/lavender"
                        android:text="Chat"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textSize="13sp"
                        android:layout_marginEnd="10dp"
                        ></Button>

                    <TextView
                        android:id="@+id/memberconnect"
                        android:layout_width="130dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/borderforbutton"
                        android:text="Connect"
                        android:gravity="center"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        ></TextView>


                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Contact"
                    android:layout_marginStart="15dp"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:layout_marginTop="20dp"></TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:orientation="horizontal">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/phone_android_24"
                        android:tint="@color/lavender"
                        android:layout_margin="10dp"
                        app:shapeAppearanceOverlay="@style/CircularImageStyle">
                    </com.google.android.material.imageview.ShapeableImageView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/MemberMobile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="9508827608"
                            android:layout_gravity="center_vertical"
                            android:textStyle="bold"
                            android:layout_marginStart="10dp"
                            android:textSize="18sp"></TextView>

                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/darkgreyColor"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="15dp"></View>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Professional Details"
                    android:layout_marginStart="15dp"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:layout_marginTop="20dp"></TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:orientation="horizontal">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/location_city_24"
                        android:tint="@color/lavender"
                        android:layout_margin="10dp"
                        app:shapeAppearanceOverlay="@style/CircularImageStyle">
                    </com.google.android.material.imageview.ShapeableImageView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/MemberJobTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="App Developer"
                            android:layout_gravity="center_vertical"
                            android:textStyle="bold"
                            android:layout_marginStart="10dp"
                            android:textSize="18sp"></TextView>
                        <TextView
                            android:id="@+id/MemberCompanyName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TCS"
                            android:layout_marginStart="10dp"
                            android:textStyle="italic"></TextView>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/darkgreyColor"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="15dp"></View>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:text="Education"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold"
                    android:textSize="18sp">
                </TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:orientation="horizontal">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/location_city_24"
                        android:tint="@color/lavender"
                        android:layout_margin="10dp"
                        app:shapeAppearanceOverlay="@style/CircularImageStyle">
                    </com.google.android.material.imageview.ShapeableImageView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/MemberCourse"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="B.M.S College of Engineering"
                            android:layout_gravity="center_vertical"
                            android:textStyle="bold"
                            android:layout_marginStart="10dp"
                            android:textSize="18sp"></TextView>
                        <TextView
                            android:id="@+id/MemberCollege"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Benagluru,Karnataka"
                            android:layout_marginStart="10dp"
                            android:textStyle="italic"></TextView>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/darkgreyColor"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="50dp"
                    android:layout_marginTop="15dp"></View>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>