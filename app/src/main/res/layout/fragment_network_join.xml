<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".bottomfragment.NetworkJoin">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchfornetwork"
            android:layout_width="match_parent"
            android:layout_height="40dp"
           app:queryHint="Search for Network.."
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/searchviewbackground"
            android:inputType="text"
            app:iconifiedByDefault="false" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerviewforsearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="15dp"
            android:clipToPadding="false"
            android:scrollbars="vertical" />

        <Button
            android:visibility="gone"
            android:id="@+id/finalNetworkJoinButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Join Network"
            android:textColor="@color/white"
            android:backgroundTint="@color/navcolor"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"></Button>



</LinearLayout>
