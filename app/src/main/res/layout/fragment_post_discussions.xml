<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".PostDiscussions">


                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                        <TextView
                            android:id="@+id/messageforDiscussion"
                            android:layout_width="match_parent"
                            android:textColor="@color/red"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            ></TextView>
                        <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="280dp"
                                    android:hint="Description*"
                                    app:placeholderText="Description"
                                    app:hintTextColor="@color/black"
                                    android:layout_marginBottom="10dp"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginEnd="10dp">
                                        <com.google.android.material.textfield.TextInputEditText
                                            android:id="@+id/DescritionforDiscussion"
                                            android:gravity="start|top"
                                            android:layout_width="match_parent"
                                            android:padding="10dp"
                                            android:layout_height="270dp"
                                            android:ems="10">
                                        </com.google.android.material.textfield.TextInputEditText>
                                </com.google.android.material.textfield.TextInputLayout>
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="13dp"
                            app:cardBackgroundColor="@color/lightgrey"
                            app:cardCornerRadius="20dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="30dp"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:id="@+id/addmediafordiscussion"
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="8dp"
                                        android:layout_gravity="center_vertical"
                                        android:drawableLeft="@drawable/outline_photo_24"
                                        android:text="Add Media"
                                        android:textStyle="bold">
                                    </TextView>

                                    <TextView
                                        android:id="@+id/categoryfordiscussion"
                                        android:layout_weight="1"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:drawableLeft="@drawable/category_24"
                                        android:layout_gravity="center_vertical"
                                        android:layout_margin="8dp"
                                        android:textStyle="bold"
                                        android:text="Category">
                                    </TextView>
                                </LinearLayout>
                                <LinearLayout
                                    android:visibility="gone"
                                    android:id="@+id/categoryLayout1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="10dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:id="@+id/AllCategories"
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:textSize="11dp"
                                        android:layout_height="40dp"
                                        android:gravity="center"
                                        android:layout_gravity="center_vertical"
                                        android:text="All Categories"
                                        android:background="@drawable/borderforoptions"
                                        android:textColor="@color/black"
                                        android:layout_margin="5dp"
                                        android:padding="6dp">
                                    </TextView>
                                    <TextView
                                        android:id="@+id/WorkExperience"
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:textSize="11dp"
                                        android:layout_gravity="center_vertical"
                                        android:layout_height="40dp"
                                        android:text="Work Experience"
                                        android:layout_margin="5dp"
                                        android:background="@drawable/borderforoptions"
                                        android:textColor="@color/black"
                                        android:padding="6dp">
                                    </TextView>
                                    <TextView
                                        android:id="@+id/knowledgebase"
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:layout_gravity="center_vertical"
                                        android:textSize="11dp"
                                        android:layout_height="40dp"
                                        android:text="Knowledge Base"
                                        android:layout_margin="5dp"
                                        android:background="@drawable/borderforoptions"
                                        android:textColor="@color/black"
                                        android:padding="6dp">
                                    </TextView>
                                </LinearLayout>
                                <LinearLayout
                                    android:visibility="gone"
                                    android:id="@+id/categorylayout2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="10dp"
                                    android:layout_marginBottom="5dp"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:id="@+id/inNews"
                                        android:layout_width="wrap_content"
                                        android:layout_height="40dp"
                                        android:gravity="center"
                                        android:textSize="11dp"
                                        android:layout_gravity="center_vertical"
                                        android:text="In News"
                                        android:background="@drawable/borderforoptions"
                                        android:textColor="@color/black"
                                        android:layout_margin="5dp"
                                        android:padding="6dp">
                                    </TextView>
                                    <TextView
                                        android:id="@+id/studyexperience"
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:layout_height="40dp"
                                        android:text="Study Experience"
                                        android:layout_gravity="center_vertical"
                                        android:layout_margin="5dp"
                                        android:textSize="11dp"
                                        android:background="@drawable/borderforoptions"
                                        android:textColor="@color/black"
                                        android:padding="6dp">
                                    </TextView>
                                    <TextView
                                        android:id="@+id/interviewExperience"
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:layout_height="40dp"
                                        android:layout_gravity="center_vertical"
                                        android:text="Interview Experience"
                                        android:layout_margin="5dp"
                                        android:textSize="11dp"
                                        android:background="@drawable/borderforoptions"
                                        android:textColor="@color/black"
                                        android:padding="6dp">
                                    </TextView>
                                </LinearLayout>

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    <ImageView
                        android:id="@+id/addedmediafordiscussion"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginHorizontal="15dp"
                        android:layout_margin="15dp"></ImageView>

                        </LinearLayout>



        <androidx.cardview.widget.CardView
            android:id="@+id/footerCard"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:elevation="1dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">
                        <Button
                            android:id="@+id/ButtonForDiscussion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/lavender"
                            android:layout_marginStart="20dp"

                            android:layout_marginEnd="20dp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:text="Post Discussion"></Button>
                </LinearLayout>






        </androidx.cardview.widget.CardView>


</RelativeLayout>